def some_function(*args, **kwargs):
    if args:
        print(f"Arguments passed: {args} as {type(args)}")
        print(args[0])

    if kwargs:
        print(f"keywords: {kwargs} as {type(kwargs)}")
        print(kwargs.get("arg1"))


arg1 = "arg1"
arg2 = "arg2"
arg3 = "arg3"

# *ARGS = call some_function with any number of arguments
some_function(arg1, arg2, arg3)

# **KWARGS = call some_function with any number of keywords
some_function(key1=arg1, key2=arg2, key3=arg3)

# call both, arguments and keywords
some_function(arg1, key1=arg1)

# or none
some_function()
